<div class="item">
    <div>Nome Completo</div>
    <div class="input">
        <input type="text" name="name" placeholder="Digite seu nome Completo ..." value="{{ user.name }}" />
    </div>
</div>

<div class="item">
    <div>E-mail</div>
    <div class="input">
        <input type="email" name="email" placeholder="exemplo@exemplo.com" value="{{ user.email }}" onblur="Validate.apply(this, 'isEmail')" />
    </div>
</div>

<div class="item">
    <div>Senha</div>
    <div class="input">
        <input type="password" name="password" {% if not user.id %} placeholder="Escolha uma Senha segura ..." {% else %} placeholder="Digite uma nova Senha para Atualizar seu Cadastro ..." {% endif %}/>
    </div>
</div>

{% if not user.id %}

<div class="item">
    <div>Repetir Senha</div>
    <div class="input">
        <input type="password" name="passwordRepeat" placeholder="Repita a Senha escolhida ..." />
    </div>
</div>

{% endif %}

<div class="item">
    <div>CPF/CNPJ</div>
    <div class="input">
        <input type="text" name="cpf_cnpj" placeholder="CPF: xxx.xxx.xxx-xx / CNPJ: xx.xxx.xxx/xxxx-xx" value="{{ user.cpf_cnpj }}" onkeydown="Mask.apply(this, 'cpfCnpj')" onblur="Validate.apply(this, 'isCpfCnpj')" />
    </div>
</div>

<div class="item">
    <div>CEP</div>
    <div class="input">
        <input type="text" name="cep" placeholder="xxxxx-xxx" value="{{ user.cep }}" onkeydown="Mask.apply(this, 'cep')" onblur="Validate.apply(this, 'isCep')" />
    </div>
</div>

<div class="item">
    <div class="input">Endereço Completo</div>
    <div>
        <input type="text" name="address" placeholder="Digite seu Endereço completo ..." value="{{ user.address }}" />
    </div>
</div>